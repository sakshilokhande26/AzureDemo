{
	"name": "dataflowAgg",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "EmpDS",
						"type": "DatasetReference"
					},
					"name": "sourceEmp"
				},
				{
					"dataset": {
						"referenceName": "deptDataSet",
						"type": "DatasetReference"
					},
					"name": "sourceDep"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "EmpDepData",
						"type": "DatasetReference"
					},
					"name": "AggEmpDep"
				}
			],
			"transformations": [
				{
					"name": "aggregateCount"
				},
				{
					"name": "join1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          empid as string,",
				"          name as string,",
				"          country as string,",
				"          department as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceEmp",
				"source(output(",
				"          depid as string,",
				"          depname as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceDep",
				"sourceEmp aggregate(groupBy(department),",
				"     TotalEmp = count(empid)) ~> aggregateCount",
				"aggregateCount, sourceDep join(department == depid,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          id as string,",
				"          name as string,",
				"          age as string,",
				"          city as string",
				"     ),",
				"     partitionFileNames:['EmpDepCount'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          name = depname,",
				"          id = TotalEmp",
				"     ),",
				"     partitionBy('hash', 1)) ~> AggEmpDep"
			]
		}
	}
}