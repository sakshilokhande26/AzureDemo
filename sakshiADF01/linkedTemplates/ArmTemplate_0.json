			"properties": {
				"activities": [
					{
						"name": "GetVMstatus",
						"type": "WebActivity",
						"dependsOn": [],
						"policy": {
							"timeout": "0.12:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"method": "GET",
							"headers": {},
							"url": "https://management.azure.com/subscriptions/9b0cdd22-4a9c-4e40-a396-0f76274d49cc/resourceGroups/demoresource01/providers/Microsoft.Compute/virtualMachines/vm1/instanceView?api-version=2025-04-01",
