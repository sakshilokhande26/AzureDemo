								"type": "MSI",
								"resource": "https://management.azure.com/"
							}
						}
					},
					{
						"name": "Check If Stopped",
						"type": "IfCondition",
						"dependsOn": [
							{
								"activity": "GetVMstatus",
								"dependencyConditions": [
									"Succeeded"
								]
							}
						],
						"userProperties": [],
						"typeProperties": {
							"expression": {
								"value": "@contains(string(activity('GetVMstatus').output.statuses), 'PowerState/stopped')",
								"type": "Expression"
							},
							"ifTrueActivities": [
								{
									"name": "Send Email via Logic App",
									"type": "WebActivity",
									"dependsOn": [],
									"policy": {
										"timeout": "0.12:00:00",
										"retry": 0,
										"retryIntervalInSeconds": 30,
										"secureOutput": false,
										"secureInput": false
									},
