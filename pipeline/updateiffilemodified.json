					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"variableName": "FileLastModified",
					"value": {
						"value": "@activity('Get Metadata_checkfiles').output.lastModified",
						"type": "Expression"
					}
				}
			},
			{
				"name": "SetVar_ifmodified",
				"type": "SetVariable",
