					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"variableName": "IsFileModified",
					"value": {
						"value": "@and(\n    activity('Get Metadata_checkfiles').output.exists,\ngreater(ticks(activity('Get Metadata_checkfiles').output.lastModified), ticks(pipeline().parameters.LastRunTimestamp)))",
